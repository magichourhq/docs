{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Magic Hour API",
  "description": "Easily generate videos using Magic Hour's API. Follow our documentation to seamlessly integrate video creation into your applications.",
  "colors": {
    "primary": "#3b82f6",
    "light": "#0564ff",
    "dark": "#3b82f6"
  },
  "logo": {
    "dark": "https://magichour.ai/logo.png",
    "light": "https://magichour.ai/logo.png"
  },
  "favicon": {
    "dark": "https://magichour.ai/favicon.ico",
    "light": "https://magichour.ai/favicon.ico"
  },
  "appearance": {
    "default": "system",
    "strict": false
  },
  "background": {
    "decoration": "gradient"
  },
  "banner": {
    "content": "⚠️ Docs is currently under construction. ⚠️"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@magichour.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://magichour.ai/developer"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/magichourai",
      "github": "https://github.com/magichourhq",
      "linkedin": "https://linkedin.com/company/magichour",
      "instagram": "https://instagram.com/magichourai",
      "youtube": "https://youtube.com/@magichourai",
      "website": "https://magichour.ai"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "pages": [
          "introduction",
          {
            "group": "Get Started",
            "pages": ["get-started/quick-start"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "openapi": "https://magichour.ai/docs/api/openapi.json"
          }
        ]
      }
    ],
    "global": {
      "dropdowns": [
        {
          "dropdown": "Python SDK",
          "href": "https://github.com/magichourhq/magic-hour-python",
          "icon": "python"
        },
        {
          "dropdown": "Node SDK",
          "href": "https://github.com/magichourhq/magic-hour-node",
          "icon": "node-js"
        },
        {
          "dropdown": "Go SDK",
          "href": "https://github.com/magichourhq/magic-hour-go",
          "icon": "golang"
        },
        {
          "dropdown": "Rust SDK",
          "href": "https://github.com/magichourhq/magic-hour-rust",
          "icon": "rust"
        }
      ],
      "anchors": [
        {
          "anchor": "Community",
          "href": "https://discord.com/invite/JX5rgsZaJp",
          "icon": "discord"
        },
        {
          "anchor": "Status",
          "href": "https://status.magichour.ai",
          "icon": "wave-pulse"
        },
        {
          "anchor": "Cost Calculator",
          "href": "https://magichour.ai/api#api-cost-calculator",
          "icon": "dollar-sign"
        },
        {
          "anchor": "Blog",
          "href": "https://magichour.ai/blog",
          "icon": "rss"
        }
      ]
    }
  }
}
